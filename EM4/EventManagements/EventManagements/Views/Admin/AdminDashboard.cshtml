
@{
    ViewBag.Title = "AdminDashboard";
}

<h2>AdminDashboard</h2>
<p>
    @Html.ActionLink("Back", "Login", "Account", null, new { @class = "btn btn-primary" })
</p>

<style>
    body {
        background-color: mintcream;
        background-image: url('../../models/images/decorated-banquet-hall-with-served-round-table-with-hydrangea-centerpiece-chiavari-chairs.jpg');
        background-repeat: no-repeat;
        background-size: 100% 100%;
        min-height: 100vh;
    }
    h2{
        color:white;
    }
    .container {
        margin-top: 30px; /* Space above the container */
    }

    .list-group {
        padding: 15px; /* Padding around the list group */
        border-radius: 5px; /* Rounded corners for the list group */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Light shadow for depth */
    }

    .list-group-item {
        border: none; /* Remove border for list items */
        padding: 10px 0; /* Vertical padding for list items */
    }

    .btn {
        font-size: 16px; /* Increase font size for better visibility */
        text-align: center; /* Center align text in buttons */
        padding: 10px; /* Add padding for buttons */
    }

    .btn-primary {
        background-color: #007bff; /* Bootstrap primary color */
        border-color: #007bff; /* Border color */
    }

    .btn-info {
        background-color: #17a2b8; /* Bootstrap info color */
        border-color: #17a2b8; /* Border color */
    }

    .btn-success {
        background-color: #28a745; /* Bootstrap success color */
        border-color: #28a745; /* Border color */
    }

    .btn:hover {
        opacity: 0.9; /* Slightly reduce opacity on hover */
        transition: background-color 0.3s, transform 0.3s; /* Smooth transition */
        transform: scale(1.02); /* Slightly enlarge button on hover */
    }

    .list-group-item {
        background-color: transparent
    }
 </style>
<div class="container">

    <div class="row">
        <div class="col-md-6">

            <ul class="list-group">
                <li class="list-group-item">
                    @Html.ActionLink("Add Event Details", "Index", "Tableevents", null, new { @class = "btn btn-warning" })
                </li>
                <li class="list-group-item">
                    @Html.ActionLink("Add Venue Details", "Index", "Tablevenues", null, new { @class = "btn btn-success" })
                </li>
                <li class="list-group-item">
                    @Html.ActionLink("Add Services And Charges Details", "Index", "Tableservices", null, new { @class = "btn btn-info" })
                </li>
            </ul>
        </div>
        <div class="col-md-6">

            <ul class="list-group">
                <li class="list-group-item">
                    @Html.ActionLink("Client Sign Up Details", "Index", "users", null, new { @class = "btn btn-danger" })
                </li>
            </ul>

            @*<h3>Manage Membership</h3>*@
            <ul class="list-group">
                <li class="list-group-item">
                    @Html.ActionLink("Client Event Requirements", "Index", "Tablebookvenues2", null, new { @class = "btn btn-primary" })
                </li>
                @*  <li class="list-group-item">
                        @Html.ActionLink("Add Club Rules", "Index", "ClubRules", null, new { @class = "btn btn-primary" })
                    </li>*@
            </ul>
        </div>
    </div>
</div>