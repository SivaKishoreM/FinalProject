@model IEnumerable<EventManagements.Models.Tableevent>

@{
    ViewBag.Title = "Index";
}

<h2>Event Index</h2>

<p>
    @Html.ActionLink("Back", "AdminDashboard", "Admin", null, new { @class = "btn btn-primary" })
</p>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-bordered table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.eventname)</th>
            <th>@Html.DisplayNameFor(model => model.eventdate)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.eventname)</td>
                <td>@Html.DisplayFor(modelItem => item.eventdate)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.eventid }, new { @class = "btn btn-warning btn-sm" }) |
                    @*@Html.ActionLink("Details", "Details", new { id = item.eventid }, new { @class = "btn btn-info btn-sm" }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.eventid }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

<style>

    body {
        background-color: mistyrose;
        background-image: url('../../models/images/photorealistic-wedding-venue-with-intricate-decor-ornaments (1).jpg');
        background-repeat: no-repeat;
        background-size: 100% 100%;
        min-height: 100vh;
    }
    h2 {
        color: white;
    }

    table {
        width: 100%;
        margin-top: 20px;
    }

    thead {
        background-color: #343a40;
        color: white;
    }

    tbody tr {
        background-color: lightyellow;
    }

    .btn {
        margin-right: 5px;
    }

    p {
        margin-top: 15px;
    }
</style>