@model IEnumerable<EventManagements.Models.Tableservice>

@{
    ViewBag.Title = "Index";
}

<h2>Service List</h2>

<p>
    @Html.ActionLink("Back", "ClientIndex", "Client", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.servicename)</th>
            <th>@Html.DisplayNameFor(model => model.servicecharge)</th>
            @*<th>Actions</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.servicename)</td>
                <td>@Html.DisplayFor(modelItem => item.servicecharge)</td>
                @*<td>
                    @Html.ActionLink("Details", "Details", new { id = item.serviceid }, new { @class = "btn btn-info btn-sm" })
                </td>*@
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        background-color: plum;
        background-image: url('../../models/images/luxurious-dinner-hall-with-large-crystal-chandelier.jpg');
        background-repeat: no-repeat;
        background-size: 100% 100%;
        min-height: 100vh;
    }
    h2 {
        color: white;
        margin-bottom: 20px;
        font-weight: bold;
    }

    table {
        width: 100%;
        margin-top: 20px;
        font-size: 14px;
        border-spacing: 0;
    }

    .thead-dark {
        background-color: #343a40;
        color: white;
    }

    tbody tr{
        background-color: moccasin;
    }

    .btn {
        margin-right: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .table th, .table td {
        padding: 12px;
        text-align: left;
    }

    tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .btn:hover {
        opacity: 0.9;
        transition: 0.3s;
    }

    p {
        margin-top: 15px;
    }
</style>